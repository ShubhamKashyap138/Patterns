input 4
output:
* * * *
 * * * *
  * * * *
   * * * *


Code:
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n+i-1;j++){
            if(j>=i)cout<<"*";
            cout<<" ";
        }
        cout<<endl;
    }
    return 0;
}
