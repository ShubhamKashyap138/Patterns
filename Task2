Input 3
Output:
    3
  2 3 2
1 2 3 2 1


#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=2*n-1;j++){
            int temp = abs(n-j)+1;
            if(temp<=i)cout<<n-temp+1<<" ";
            else cout<<"  ";
        }
        cout<<endl;
    }
    return 0;
}
