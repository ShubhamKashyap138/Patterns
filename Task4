#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,m=1;
    cout<<"N should be odd ";
    cin>>n;
    m+=n/2;
    for(int i=1;i<=n;i++){
        int starToPrint = abs(m-i)+1;
        for(int j=1;j<=m;j++){
            if(m-j+1<=starToPrint)cout<<"*";
            cout<<" ";
        }
        cout<<endl;
    }
    return 0;
}
